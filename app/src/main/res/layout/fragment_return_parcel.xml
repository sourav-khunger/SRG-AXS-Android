<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateDebug.MenuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/axs_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toRightOf="@+id/logo"
                    android:text="AXS"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Button
                android:id="@+id/loginlogoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_bg_dark"
                android:text="Log on/off Duty"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/common_google_signin_btn_text_dark" />

            <Button
                android:id="@+id/viewComButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/button_bg_dark"
                android:text="View Company"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/common_google_signin_btn_text_dark" />

            <Button
                android:id="@+id/reTurnParcel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/button_bg_dark"
                android:text="Returned Parcels"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/common_google_signin_btn_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp"
                android:text="Vehicle Pictures"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/secondaryDarkColor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#adadad" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/frontView"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight=".5"
                    android:src="@drawable/front" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#adadad" />

                <ImageView
                    android:id="@+id/backView"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight=".5"
                    android:src="@drawable/back" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#adadad" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/leftView"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight=".5"
                    android:src="@drawable/left" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#adadad" />

                <ImageView
                    android:id="@+id/rightView"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight=".5"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#adadad" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>